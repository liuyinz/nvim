{
  // preference
  "coc.preferences.snippetStatusText": "Ⓢ ",
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.formatOnType": true,
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,

  // suggest
  // "suggest.languageSourcePriority": 99,
  // "suggest.lowPrioritySourceLimit": 90,
  // "suggest.highPrioritySourceLimit": 90,
  "suggest.enablePreview": true,
  "suggest.noselect": false,
  "suggest.autoTrigger": "trigger",
  "suggest.maxCompleteItemCount": 100,
  "suggest.snippetIndicator": "Ⓢ ",
  "suggest.echodocSupport": true,
  "suggest.acceptSuggestionOnCommitCharacter": true,

  // Signature
  "signature.enable": true,
  "signature.target": "float",
  "signature.preferShownAbove": false,
  "signature.maxWindowHeight": 1,

  // diagnostic
  "diagnostic.checkCurrentLine": true,
  "diagnostic.refreshAfterSave": true,
  "diagnostic.errorSign": "●",
  "diagnostic.warningSign": "●",
  "diagnostic.maxWindowHeight": 10,

  // other
  "codeLens.enable": true,
  "list.maxHeight": 15,
  "session.directory": "~/.cache/nvim/sessions",
  "imselect.enableStatusItem": false,

  // snippets
  "snippets.priority": 90,
  "snippets.userSnippetsDirectory": "~/.config/nvim/snippets",
  "snippets.loadFromExtensions": false,
  "snippets.snipmate.enable": false,
  "snippets.extends": {
    "jsonc": ["json"],
  },

  // Coc-list
  "list.source.mru.ignoreGitIgnore": false,
  "list.source.grep.useLiteral": true,
  "list.source.grep.command": "rg",

  // coc-git
  "git.addedSign.hlGroup": "GutterAdd",
  "git.changedSign.hlGroup": "GutterChange",
  "git.removedSign.hlGroup": "GutterDelete",
  "git.topRemovedSign.hlGroup": "GutterDelete",
  "git.changeRemovedSign.hlGroup": "GutterChangeDelete",
  "coc.source.issues.filetypes": ["gitcommit"],

  // coc-gitignore
  "gitignore.enable": true,
  "gitignore.templates.patch": {},
  "gitignore.templates.replace": {},

  //coc-translator
  "translator.toLang": "zh",
  "translator.engines": ["ciba"],
  "translator.maxsize": 5000,

  // coc-eslint
  "eslint.packageManager": "npm",
  "eslint.autoFix": false,
  "eslint.autoFixOnSave": true,
  "eslint.options": {},
  "eslint.filetypes":[
    "javascript",
    "javascriptreact",
    "vue",
    "typescript",
    "typescriptreact"
  ],

  // coc-tsserver
  "javascript.format.enabled":false,
  "typescript.format.enabled": false,
  "tsserver.npm": "/usr/local/bin/npm",

  // emmet
  "emmet.showExpandedAbbreviation": "always",
  "emmet.priority": 99,
  "emmet.optimizeStylesheetParsing": false,
  /* "emmet.extensionsPath": "~/.config/nvim", */
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "javascript.jsx": "javascriptreact",
    "typescript.tsx": "typescriptreact"
  },

  // rust
  "rust-client.logToFile": true,
  "rust-client.revealOutputChannelOn": "info",
  "rust-client.updateOnStartup": true,

  // python
  "python.autoComplete.addBrackets": true,
  "python.jediEnabled": true,
  "python.jediMemoryLimit": -1,
  "python.jediPath": "/usr/local/lib/python3.7/site-packages",
  "python.analysis.diagnosticPublishDelay": 10,
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.pylintArgs": ["--rcfile", "~/.pylintrc"],
  "python.linting.pylintEnabled": true,
  "python.linting.pylintUseMinimalCheckers": true,
  "python.pythonPath": "/usr/local/bin/python3",
  "python.sortImports.path": "/usr/local/bin/isort",
  "python.terminal.executeInFileDir": true,

  // Viml
  "vimlsp.debug": false,
  "vimlsp.trace.server": "verbose",
  "vimlsp.diagnostic.enable": true,
  "vimlsp.indexes.runtimepath": true,
  "vimlsp.indexes.count": 5,
  "vimlsp.indexes.gap": 50,
  "vimlsp.indexes.projectRootPatterns": [".git", "autoload", "plugin"],
  "vimlsp.suggest.fromVimruntime": false,
  "vimlsp.suggest.fromRuntimepath": false,

  //language server
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
  },
}
